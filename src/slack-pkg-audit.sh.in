# sets script/package information
PROGRAM_NAME=`basename ${0}`
PACKAGE_NAME=`echo '@PACKAGE_NAME@' |sed -e 's/[@].*[@]//g'`
PACKAGE_VERSION=`echo '@PACKAGE_VERSION@' |sed -e 's/[@].*[@]//g'`
PACKAGE_BUGREPORT=`echo '@PACKAGE_BUGREPORT@' |sed -e 's/[@].*[@]//g'`


# If possible, log events in /var/log/messages:
PROG=${PROGRAM_NAME}
if [ -f /var/run/syslogd.pid -a -x /usr/bin/logger ]; then
  LOGGER="/usr/bin/logger -s -t ${PROG}[$$]"
else
  LOGGER="/usr/bin/sed -e \"s/^/${PROG}: /g\""
fi


# parses CLI arguments
for FLAG in ${@};do
   if test "x${FLAG}" == "x--help";then
      echo "Usage: ${0} <address> <address> ... <address>"
      exit 0
   elif test "x${FLAG}" == "x--version";then
      echo "${PROGRAM_NAME} (${PACKAGE_NAME}) ${PACKAGE_VERSION}"
      echo "Copyright 2013 Bindle Binaries <${PACKAGE_BUGREPORT}>."
      echo ""
      exit 0
   fi
done


/usr/sbin/slackpkg \
   -dialog=off \
   -default_answer=n \
   -batch=on \
   -spinning=off \
   update > /dev/null 2>&1


if test $# -eq 0;then
   /usr/sbin/slackpkg \
      -dialog=off \
      -default_answer=n \
      -batch=on \
      -spinning=off \
      upgrade-all 2>&1 \
      | /usr/bin/egrep -v '^$| ' \
      | /usr/bin/sed -e 's/^/upgrade available: /g' \
      | ${LOGGER} 2>&1
else
   CRONMAIL="`dirname ${0}`/cronmail.sh"
   SUBJECT="Slackware Package Audit (`hostname`)"
   /usr/sbin/slackpkg \
      -dialog=off \
      -default_answer=n \
      -batch=on \
      -spinning=off \
      upgrade-all 2>&1 \
      | /usr/bin/egrep -v '^$| ' \
      | /usr/bin/sed -e 's/^/upgrade available: /g' \
      | ${CRONMAIL} "${SUBJECT}" $@
fi


# end of script
